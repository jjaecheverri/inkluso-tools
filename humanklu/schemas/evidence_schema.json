{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "humanklu/evidence",
  "title": "HumanKlu Evidence Log",
  "description": "Claim-level evidence log with VERIFIED vs INFERRED classification",
  "type": "object",
  "required": ["report_id", "generated_at", "entries"],
  "properties": {
    "report_id": { "type": "string", "pattern": "^HK-[0-9]{4}-[A-Z0-9]{6}$" },
    "generated_at": { "type": "string", "format": "date-time" },
    "entries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["claim_id", "claim_text", "evidence_type", "source", "confidence"],
        "properties": {
          "claim_id": { "type": "string", "pattern": "^CLM-[0-9]+$" },
          "claim_text": { "type": "string" },
          "evidence_type": { "enum": ["VERIFIED", "INFERRED"] },
          "source": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": { "enum": ["URL", "DOI", "INTERNAL_DB", "MODEL_REASONING", "EXPERT_QUOTE", "DATASET"] },
              "uri": { "type": "string" },
              "title": { "type": "string" },
              "retrieved_at": { "type": "string", "format": "date-time" },
              "excerpt": { "type": "string" }
            }
          },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "flags": {
            "type": "array",
            "items": { "enum": ["STALE_SOURCE", "SINGLE_SOURCE", "PAYWALLED", "CONTRADICTED", "UNVERIFIABLE"] }
          },
          "notes": { "type": "string" }
        }
      }
    }
  }
}
